{
  "name": "Flow",
  "description": "Next level productivity!",
  "manifest_version": 2,
  "version": "1.0",

  "icons": {
    "48": "icons/flow-48.png"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "browser-action.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ]
}
